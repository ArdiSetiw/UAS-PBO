<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="panel" prefHeight="100.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="program.CartGridController">
   <children>
      <HBox prefHeight="100.0" prefWidth="500.0">
         <children>
            <ImageView fx:id="imgItem" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lblNameItem" prefHeight="100.0" prefWidth="127.0" text="Label">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="102.0">
               <children>
                  <ImageView fx:id="btnKurangJumlah" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#btnKurangJumlah_Clicked" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@../gambar/icon/minus.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="lblStokCart" alignment="CENTER" prefHeight="25.0" prefWidth="50.0" style="-fx-border-color: black;" text="Label">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <ImageView fx:id="btnTambahJumlah" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#btnTambahJumlah_Clicked" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@../gambar/icon/plus.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <Label fx:id="lblHargaItem" alignment="CENTER" prefHeight="100.0" prefWidth="105.0" text="Label">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ImageView fx:id="btnHapus" fitHeight="41.0" fitWidth="38.0" onMouseClicked="#btnHapus_Clicked" pickOnBounds="true">
               <image>
                  <Image url="@../gambar/icon/delete.png" />
               </image>
               <HBox.margin>
                  <Insets left="10.0" top="30.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
   </children>
</AnchorPane>
